@model IEnumerable<AplicacionWeb.Models.ApplicationUser>
	@{
		ViewData["Title"] = "Usuarios";
	}
	<h2>Usuarios</h2>
	<p>
		<!--<a asp-action="Create">Create New</a> -->
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					Usuario
				</th>
				<th>
					Email
				</th>
				<th>
					Teléfono
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.UserName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.PhoneNumber)
					</td>
					<td>
						<a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
						<a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
